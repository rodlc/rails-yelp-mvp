<h1>Restaurants</h1>

<%= link_to "Ajouter un restaurant", new_restaurant_path, class: "btn btn-primary" %>

<ul>
  <% @restaurants.each do |restaurant| %>
    <li>
      <%= link_to restaurant.name, restaurant_path(restaurant) %>
      - <%= restaurant.category %>
      - <%= restaurant.address %>
    </li>
  <% end %>
</ul>
