  <%= link_to "Ajouter un restaurant", new_restaurant_path, class: "btn btn-primary" %>
</div>

<div class="row">
  <% @restaurants.each do |restaurant| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title"><%= restaurant.name %></h5>
          <p class="card-text">
            <span class="badge bg-secondary"><%= restaurant.category %></span>
          </p>
          <p class="card-text">
            <i class="bi bi-geo-alt"></i> <%= restaurant.address %>
          </p>
          <p class="card-text">
            <i class="bi bi-telephone"></i> <%= restaurant.phone_number %>
          </p>
          <p class="card-text">
            <small class="text-muted">
              <%= pluralize(restaurant.reviews.count, "avis") %>
            </small>
          </p>
        </div>
        <div class="card-footer bg-transparent">
          <%= link_to "Voir dÃ©tails", restaurant_path(restaurant), class: "btn btn-sm btn-outline-primary w-100" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @restaurants.empty? %>
  <div class="alert alert-info text-center" role="alert">
    Aucun restaurant pour le moment. <%= link_to "Ajoutez-en un !", new_restaurant_path %>
  </div>
<% end %>
