<div class="row">
  <div class="col-md-8">
    <div class="card mb-4">
      <div class="card-header bg-primary text-white">
        <h2 class="mb-0"><%= @restaurant.name %></h2>
      </div>
      <div class="card-body">
        <p><strong>Catégorie :</strong> <span class="badge bg-secondary"><%= @restaurant.category %></span></p>
        <p><strong>Adresse :</strong> <%= @restaurant.address %></p>
        <p><strong>Téléphone :</strong> <%= @restaurant.phone_number %></p>
      </div>
    </div>

    <!-- Avis -->
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="mb-0">Avis (<%= @restaurant.reviews.count %>)</h3>
        <%= link_to "Ajouter un avis", new_restaurant_review_path(@restaurant), class: "btn btn-success btn-sm" %>
      </div>
      <div class="card-body">
        <% if @restaurant.reviews.any? %>
          <% @restaurant.reviews.each do |review| %>
            <div class="border-bottom pb-3 mb-3">
              <div class="d-flex justify-content-between align-items-start">
                <div>
                  <span class="badge bg-warning text-dark">
                    <%= "⭐" * review.rating %>
                  </span>
                  <p class="mt-2"><%= review.content %></p>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <p class="text-muted">Aucun avis pour le moment. Soyez le premier à donner votre avis !</p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="card">
      <div class="card-body">
        <%= link_to "← Retour à la liste", restaurants_path, class: "btn btn-outline-secondary w-100" %>
      </div>
    </div>
  </div>
</div>
