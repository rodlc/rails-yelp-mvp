<h1>Ajouter un avis pour <%= @restaurant.name %></h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content, label: "Votre avis", as: :text %>
  <%= f.input :rating, 
              collection: (0..5).to_a,
              label: "Note" %>
  <%= f.submit "Ajouter l'avis", class: "btn btn-success" %>
<% end %>

<%= link_to "Retour", restaurant_path(@restaurant) %>
